<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.sony.cameraremote.SimpleLiveviewSurfaceView
        android:id="@+id/surfaceview_liveview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#66FFFFFF"
        android:orientation="vertical"
        android:paddingRight="10dp" >

        <Spinner
            android:id="@+id/spinner_shoot_mode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/button_take_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:enabled="false"
            android:text="@string/button_take_picture"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/button_rec_start_stop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:enabled="false"
            android:text="@string/button_rec_start"
            android:textAppearance="?android:attr/textAppearanceSmall" />

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
	        android:orientation="horizontal">
        
	        <Button
	            android:id="@+id/button_pan_up"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:background="@android:color/transparent"
	            android:drawableLeft="@drawable/mcp_arrow_up"
	            >
	        </Button>
	        <!-- android:onClick="pan_callback_up" 
	        	android:onClick="pan_callback_down"
	        	android:onClick="pan_callback_left"
	        	android:onClick="pan_callback_right"
	         	-->
	        	        
	        <Button
	            android:id="@+id/button_pan_down"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:background="@android:color/transparent"
	            android:drawableLeft="@drawable/mcp_arrow_down"
	            >
	        </Button>
        
        </LinearLayout>

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
	        android:orientation="horizontal">

	        <Button
	            android:id="@+id/button_pan_left"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:background="@android:color/transparent"
	            android:drawableLeft="@drawable/mcp_arrow_left">
	        </Button>
	        	        
	        <Button
	            android:id="@+id/button_pan_right"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:background="@android:color/transparent"
	            android:drawableLeft="@drawable/mcp_arrow_right">
	        </Button>
	        
	    </LinearLayout>
	    
   	</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >
    
        <Button
            android:id="@+id/button_zoom_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@android:drawable/btn_minus"
            android:visibility="gone"
            >
        </Button>
    
        <Button
            android:id="@+id/button_zoom_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@android:drawable/btn_plus"
            android:visibility="gone"
            >
        </Button>
    
    </LinearLayout>    
    
    <TextView
        android:id="@+id/text_camera_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/image_picture_wipe"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/picture_wipe_boarder"
        android:contentDescription="@string/no_image"
        android:src="@android:drawable/ic_menu_report_image"
        android:visibility="invisible" />

</merge>